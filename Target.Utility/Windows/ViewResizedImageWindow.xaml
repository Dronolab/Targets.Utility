<Window x:Class="Target.Utility.Windows.ViewResizedImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Target.Utility"
        xmlns:viewModels="clr-namespace:Target.Utility.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:ViewResizedImageWindowViewModel}"
        Title="Resized Image">
    <StackPanel Orientation="Horizontal">
        <Canvas x:Name="Canvas"
            ClipToBounds="True">
            <Image x:Name="Image"
                   Width="{Binding Width}"
                   Height="{Binding Height}"
                   Source="{Binding ImageSource}"/>
        </Canvas>
        <Button Content="Save"
                Command="{Binding SaveResizedImageCommand}"
                Height="32" 
                Width="100" 
                Margin="8"/>
    </StackPanel>
</Window>
