<Window x:Class="Target.Utility.Windows.EditSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Target.Utility.Windows"
        xmlns:viewModels="clr-namespace:Target.Utility.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:EditSettingsWindowViewModel}"
        SizeToContent="WidthAndHeight"
        Title="Settings">
    <Grid VerticalAlignment="Center"
          HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!--Width resizing-->
        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Margin="8"
                   Text="** Resizing Width"/>
        
        <TextBox Grid.Column="1"
                 Grid.Row="0"
                 Margin="0,8,8,8"
                 Width="50"
                 TextAlignment="Center"
                 Text="{Binding ResizeWidth}"/>

        <!--Heigh resizing-->
        <TextBlock Grid.Column="0"
                   Grid.Row="1"
                   Margin="8"
                   Text="** Resizing Height"/>

        <TextBox Grid.Column="1"
                 Grid.Row="1"
                 Margin="0,8,8,8"
                 Width="50"
                 TextAlignment="Center"
                 Text="{Binding ResizeHeight}"/>

        <!--Multiple resizing-->
        <TextBlock Grid.Column="0"
                   Margin="8"
                   Grid.Row="2"
                   Text="** Resizing Multiple"/>

        <TextBox Grid.Column="1"
                 Grid.Row="2"
                 Margin="0,8,8,8"
                 Width="50"
                 TextAlignment="Center"
                 Text="{Binding ResizeMultiple}"/>

        <!--Tolerance-->
        <TextBlock Grid.Column="0"
                   Margin="8"
                   Grid.Row="3"
                   Text="** Tolerance on multiple"/>

        <TextBox Grid.Column="1"
                 Grid.Row="3"
                 Margin="0,8,8,8"
                 Width="50"
                 TextAlignment="Center"
                 Text="{Binding Tolerance}"/>

        <!--ResizeImage-->
        <TextBlock Grid.Column="0"
                   Grid.Row="4"
                   Margin="8"
                   ToolTip="Note that the image will be cropted based on the multiple"
                   Text="** Resize Image*"/>

        <CheckBox Grid.Column="1"
                  Grid.Row="4"
                  Margin="0,8,8,8"
                  IsChecked="{Binding ResizeImage}"/>
        
        <Button Grid.Column="0"
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Content="** Save"
                Margin="8"
                Command="{Binding SaveSettingsCommand}"/>
    </Grid>
</Window>
